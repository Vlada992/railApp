<h1>Create a new Portfolio item</h1>

<h2>
<p>THese ar self default values for this record, images main and thumb:</p>
<%= @portfolio_item.main_image %>
<br>
<%= @portfolio_item.thumb_image %>
</h2>


<%= form_with(model: @portfolio_item, local: true) do |form| %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
  <%= form.fields_for :technologies do |technology_form| %>
    
  <li>
      <%= technology_form.label :name %>   
      <%= technology_form.text_field :name %>
  </li>
  <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>


  
<% end %>



